  ],
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-terser": "0.4.4",
    "@rollup/plugin-typescript": "12.1.4",
    "@typescript-eslint/eslint-plugin": "8.40.0",
    "@typescript-eslint/parser": "8.40.0",
    "@vitest/ui": "3.2.4",
    "eslint": "9.33.0",
    "jest-when": "3.6.0",
    "jsdom": "26.1.0",
    "rimraf": "3.0.2",
    "rollup": "4.47.1",
