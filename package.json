{
  "name": "@hmcts/cookie-manager",
  "version": "1.0.0",
  "description": "Cookie Manager is a Javascript library for dealing with cookie compliance.",
  "main": "src/cookieManager.js",
  "scripts": {
    "build": "rollup -c src/rollup.config.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmcts/cookie-manager.git"
  },
  "author": "HM Courts and Tribunals",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hmcts/cookie-manager/issues"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/src/common.test.js"
    ]
  },
  "homepage": "https://github.com/hmcts/cookie-manager#readme",
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/preset-env": "^7.16.11",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "jest": "^27.5.1",
    "jest-when": "^3.5.1",
    "rollup": "^2.70.1"
  }
}
